{% comment %}
  Renders a text truncator component that truncates text to a specified number of lines.
  # render 'text-truncator', text: text, max_lines: 3
{% endcomment %}
{% comment %} {%- if max_lines > 0 -%}
  <text-truncator
    data-read-more="{{- 'theme.actions.read_more' | t -}}"
    data-read-less="{{- 'theme.actions.read_less' | t -}}"
    data-max-lines="{{- max_lines | times: 1 -}}"
  >
    <div class="truncated-text">{{- text -}}</div>
    <button type="button" class="button button--text button--uppercase" style="display: none;">
      <span>{{- 'theme.actions.read_more' | t -}}</span>
      <span class="icon-plus">{% render 'icon', icon_name: 'theme-plus' %}</span>
      <span class="icon-minus">{% render 'icon', icon_name: 'theme-minus' %}</span>
    </button>
  </text-truncator>
{%- else -%}
  {{- text -}}
{%- endif -%} {% endcomment %}

{%- if max_lines > 0 -%}
	<text-truncator
    data-read-more="{{- 'actions.read_more' | t -}}"
    data-read-less="{{- 'actions.read_less' | t -}}"
		data-max-line-count="{{- max_lines | times: 1 -}}"
	>
		<div class="text-truncator rte no-scrollbar">
			{{- text -}}
    </div>
    <button type="button" class="button button--text button--uppercase text-truncator__button">
      <span class="text-truncator__button-text"></span>
    <div class="text-truncator__icon">
      <span class="icon-plus">{% render 'icon-plus' %}</span>
      <span class="icon-minus">{% render 'icon-minus' %}</span>
    </div>
    </button>
	</text-truncator>
{% else %}
  <div class="rte">
    {{- text -}}
  </div>
{%- endif -%}
