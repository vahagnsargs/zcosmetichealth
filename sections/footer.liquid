        {
          "type": "url",
          "id": "title_url",
          "label": "t:sections.footer.blocks.menu.settings.title_url.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "t:sections.footer.blocks.menu.settings.menu.label",
