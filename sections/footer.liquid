  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.mobile_accordions.content"
    },
    {
      "type": "checkbox",
      "id": "first_accordion_show",
      "label": "t:sections.footer.settings.mobile_accordions.label",
